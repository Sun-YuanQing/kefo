/* pages/service/service.wxss */

page {
  background: #f5f5f5;
}

.container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
}

.main-box {
  background: #fff;
  width: 100%;
  height: 100%;
  text-align: center;
}

.tel-img {
  width: 576rpx;
  height: 314rpx;
  margin-top: 212rpx;
}

.tel-text {
  font-size: 28rpx;
  color: #000;
  font-weight: 800;
  margin-top: 80rpx;
}

.tel-btn {
  margin-top: 40rpx;
  text-align: center;
}

.tel-btn text {
  background: #4d85ff;
  color: #fff;
  padding: 24rpx 220rpx;
  box-shadow: 0 8rpx 20rpx 0 #9dbcff;
  border-radius: 44rpx;
  font-size: 28rpx;
}
