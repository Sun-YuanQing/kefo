/* pages/myOrder/myOrder.wxss */
.scroll-box {
  width: 100%;
  height: 80rpx;
  white-space: nowrap;
  background: #fff;
}

.scroll-item {
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  margin: 0 30rpx;
}

.scroll-sel {
  height: 74rpx;
  line-height: 74rpx;
  font-size: 32rpx;
  color: #000;
  font-weight: 800;
  border-bottom: 6rpx solid #4d85ff;
  color: #4d85ff;
}

.tabs-list {
  width: 100%;
  padding: 0 30rpx;
  font-size: 24rpx;
  color: #999999;
  height: 108rpx;
  line-height: 108rpx;
  white-space: nowrap;
}

.order-item {
  display: inline-block;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 28rpx;
  margin: 0 20rpx;
}

.tabsList-sel {
  color: #4D85FF;
  border: 1rpx solid #4D85FF;
  border-radius: 8rpx;
  padding: 0 30rpx;
  margin: 0;
}

.myOrder-list {
  position: absolute;
  width: 100%;
  min-height: calc(100% - 188rpx);
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
}

.content-box {
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  padding: 20rpx;
}

.myOrder-box {
  border-bottom: 1rpx solid #fff;
  padding-bottom: 30rpx;
}

.myClient-box {
  border-bottom: 1rpx solid #F5F5F5;
  padding-bottom: 50rpx;
}

.wait-pay {
  font-size: 20rpx;
  color: #ff4b35;
  text-align: right;
}

.pay-success {
  font-size: 20rpx;
  color: #333;
  text-align: right;
}

.pay-close {
  font-size: 20rpx;
  color: #999;
  text-align: right;
}

.myOrder-content {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.order-img {
  width: 144rpx;
  height: 144rpx;
  border-radius: 16rpx;
}

.myOrder-right {
  width: calc(100% - 164rpx);
  margin-left: 20rpx;
}

.myOrder-title {
  font-size: 28rpx;
  color: #333;
  width: 400rpx;
  min-height: 80rpx;
}

.order-line {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  width: 100%;
  margin-top: 20rpx;
}

.myOrder-pay {
  border: 1rpx solid #4d85ff;
  color: #4d85ff;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 26rpx;
}

.myOrder-yuan {
  font-size: 24rpx;
  font-weight: 800;
}

.myOrder-price {
  font-size: 32rpx;
  font-weight: 800;
}

.myOrder-num {
  font-size: 24rpx;
  color: #333333;
}

.myOrder-open {
  font-size: 20rpx;
  font-weight: 800;
}

.seckill-old {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 8rpx;
}

.seckill-end {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 20rpx;
}

.seckill-box {
  width: calc(100% - 164rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.end-line {
  display: flex;
  align-items: center;
  color: #333;
  font-size: 24rpx;
}

.end-line .black {
  color: #fff;
  margin-left: 16rpx;
  margin-right: 8rpx;
  background: #333;
  padding: 4rpx 8rpx;
}

.form-end {
  color: #666;
}

.typeClose {
  color: #999 !important;
}

.no-box {
  width: 100%;
  text-align: center;
  margin-top: 204rpx;
}

.no-img {
  width: 462rpx;
  height: 256rpx;
}

.no-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 24rpx;
}

.earn-box {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.earn-name {
  font-size: 28rpx;
  color: #666;
}

.earn-price {
  font-size: 32rpx;
  font-weight: 800;
  margin-left: 12rpx;
}

.live-line {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #F5F5F5;
  padding-top: 20rpx;
}

.live-date {
  font-size: 24rpx;
  color: #666666;
}

.live-end {
  font-size: 20rpx;
  color: #FF4B35;
}