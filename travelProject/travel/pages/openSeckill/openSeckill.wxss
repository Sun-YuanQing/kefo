/* pages/openSeckill/openSeckill.wxss */

page {
  background: #f5f5f5;
}

.goods-box {
  background: #fff;
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
}

.goods-img {
  width: 144rpx;
  height: 144rpx;
  border-radius: 16rpx;
}

.goods-name {
  width: calc(100% - 174rpx);
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 800;
}

.activity-box {
  background: #fff;
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.activity-line {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  line-height: 45rpx;
}

.activity-name {
  width: 170rpx;
  color: #666;
  font-size: 28rpx;
}

.activity-name text {
  margin-left: 66rpx;
}

.toRight {
  width: 12rpx;
  height: 24rpx;
}

.activity-price {
  font-size: 28rpx;
  color: #000;
}

.activity-time {
  display: flex;
  justify-content: space-between;
  width: calc(100% - 170rpx);
  align-items: center;
  font-size: 28rpx;
  color: #000;
}

.timeDiv {
  width: 220rpx;
  text-align: center;
  color: #4d85ff;
}

.activity-zhi {
  color: #333;
}

.activity-radio {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.activity-bottom {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  margin-top: 40rpx;
}

.radio-line {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.radio-none {
  width: 28rpx;
  height: 28rpx;
  border: 1rpx solid #666;
  background: #fff;
  border-radius: 50%;
  margin-right: 20rpx;
}

.radio-sel {
  background: #4d85ff;
  border: 1rpx solid #4d85ff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.radio-none image {
  width: 20rpx;
  height: 14rpx;
}

.sub-radio {
  font-size: 24rpx;
  color: #999;
}

.radio-input {
  width: 100rpx;
  border: 1rpx solid #bbb;
  height: 50rpx;
  margin: 0 20rpx;
}

.share-box {
  background: #fff;
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
}

.share-title {
  font-size: 28rpx;
  color: #666;
}

.share-textarea {
  font-size: 28rpx;
  height: 90rpx;
  margin-top: 30rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}

.text-textarea {
  font-size: 28rpx;
  height: 90rpx;
  margin-top: 30rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  color: #BBBBBB;
}

.share-place {
  font-size: 28rpx;
  color: #bbb;
}

.share-num {
  text-align: right;
  color: #333;
  font-size: 28rpx;
}

.rule-box {
  background: #fff;
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 30rpx 130rpx;
}

.rule-title {
  font-size: 28rpx;
  color: #666;
}

.rule-content {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 0 15rpx 20rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 40rpx;
}

.foot-box {
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #f5f5f5;
  z-index: 999;
  text-align: center;
}

button {
  margin: 0 !important;
  border-radius: 0;
  border: none;
}

button::after {
  border: none;
  border-radius: 0;
}

.foot-line {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100rpx;
}

.foot-preview {
  width: 300rpx;
  border: 1rpx solid #4d85ff;
  height: 70rpx;
  line-height: 70rpx;
  color: #4d85ff;
  font-size: 28rpx;
  border-top-left-radius: 36rpx;
  border-bottom-left-radius: 36rpx;
}

.foot-issue {
  width: 300rpx;
  border: 1rpx solid #4d85ff;
  height: 70rpx;
  line-height: 70rpx;
  color: #fff;
  font-size: 28rpx;
  background: #4d85ff;
  border-top-right-radius: 36rpx;
  border-bottom-right-radius: 36rpx;
}

.zhan-width {
  width: 480rpx;
}