/* pages/index/index.wxss */

.contain {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.manifesto {
  font-size: 32rpx;
  color: #000;
  font-weight: 800;
  padding-top: 12rpx;
}

.subhead {
  font-size: 28rpx;
  color: #666;
  margin-top: 12rpx;
}

.swiper_box {
  margin-top: 30rpx;
}

.swiper_img {
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
  padding: 0 8rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.swiper_img image {
  width: 100%;
}

.seckill_box {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-top: 80rpx;
}

.recommend-title {
  font-size: 32rpx;
  color: #000;
  font-weight: 800;
}

.recommend-line {
  width: 100%;
  margin-top: 20rpx;
  background: #f6f9ff;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 20rpx 28rpx;
  align-items: center;
}

.recommend-left {
  font-size: 28rpx;
  color: #666;
}

.recommend-right {
  font-size: 28rpx;
  color: #000;
}

.seckill_title_line {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.seckill_title_seckill {
  font-size: 32rpx;
  color: #000;
  font-weight: 800;
}

.seckill_title_more {
  font-size: 28rpx;
  color: #666;
}

.seckill_content_line {
  margin-top: 20rpx;
}

.recommend-box {
  background: linear-gradient(180deg, rgba(255, 255, 255, 1) 0%, rgba(245, 245, 245, 1) 100%);
}

.scorll_text {
  font-size: 32rpx;
  color: #000;
  padding-left: 30rpx;
  margin-top: 70rpx;
  font-weight: 800;
}

.goods_list {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
}

.goods_item {
  width: 334rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.goods_item:nth-child(odd) {
  margin-right: 20rpx;
}

.merchant_Info {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.merchant_Img {
  width: 100%;
  box-sizing: border-box;
  padding: 48rpx 24rpx;
  background: #fff;
  border-radius: 8rpx;
}

.merchant_logo_line {
  display: flex;
  align-items: center;
}

.merchant_logo_img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
}

.merchant_logo_content {
  margin-left: 20rpx;
  width: calc(100% - 160rpx);
}

.merchant_logo_content_title {
  font-weight: 800;
  font-size: 32rpx;
  color: #000;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.merchant_logo_content_subhead_line {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.merchant_logo_content_subhead {
  font-size: 24rpx;
  color: #999;
  width: 380rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.merchant_logo_content_subhead_over {
  font-size: 20rpx;
  color: #4d85ff;
  margin-left: 20rpx;
}

.shop_mine_line {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 50rpx;
}

.shop_mine_left_line {
  display: flex;
  align-items: center;
}

.shop_mine_left_line image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.shop_mine_left_line text {
  font-size: 24rpx;
  color: #333;
  width: calc(100% - 70rpx);
}

.shop_mine_right_line {
  display: flex;
  align-items: center;
}

.shop_mine_right_shu {
  width: 1rpx;
  height: 24rpx;
  background: #666;
  margin-right: 36rpx;
}

.shop_mine_right_line image {
  width: 28rpx;
  height: 28rpx;
}

.shop_address {
  display: flex;
  align-items: center;
  margin-top: 26rpx;
}

.shop_address image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.shop_address text {
  font-size: 24rpx;
  color: #333;
}

.address-name {
  width: 450rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
