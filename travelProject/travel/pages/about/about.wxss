/* pages/about/about.wxss */

page {
  background: #f5f5f5;
}

.container {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
}

.content {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  background: #fff;
  position: relative;
}

.content .logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
  overflow: hidden;
}

.content .logo image {
  width: 160rpx;
}

.siteTitle {
  text-align: center;
  font-size: 24rpx;
  color: #000;
  font-weight: 800;
  margin-top: 50rpx;
}

.description {
  color: #666;
  font-size: 28rpx;
  margin-top: 40rpx;
  max-width: 510rpx;
}

.footer {
  width: 100%;
  text-align: center;
  position: absolute;
  left: 0;
  bottom: 50rpx;
  font-size: 24rpx;
  color: #666;
}
