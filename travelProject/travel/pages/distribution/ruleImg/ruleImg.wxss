/* pages/distribution/ruleImg/ruleImg.wxss */
.img-box {
  position: relative;
  font-size: 0;
}

.price-text {
  position: absolute;
  bottom: 210rpx;
  left: 0;
  font-size: 28rpx;
  width: 100%;
  text-align: center;
}

.price-text text {
  font-size: 32rpx;
}

.last-text {
  position: absolute;
  bottom: 60rpx;
  left: 0;
  font-size: 24rpx;
  width: 100%;
  text-align: center;
}

.share-btn {
  position: absolute;
  top: 0;
  left: 0;
  padding: 6rpx 40rpx 6rpx 32rpx;
  line-height: normal;
  font-size: 24rpx;
  border-radius: 0 200rpx 200rpx 0;
}

button::after {
  border: none;
}

.null-box {
  width: 100%;
  height: 100rpx;
}

.toBe-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
}

.toBe-box button {
  background: #FF613B;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 130rpx;
  border-radius: 36rpx;
  line-height: normal;
}

.modal-box {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modalImg-box {
  position: relative;
  width: 600rpx;
  text-align: center;
  font-size: 0;
}

.ruleModal-img {
  width: 600rpx;
  height: 464rpx;
}

.rule-content {
  position: absolute;
  top: 256rpx;
  left: 0;
  width: 100%;
  text-align: centerz;
}

.invite-text {
  font-size: 32rpx;
  font-weight: 800;
}

.invite-btn {
  font-size: 28rpx;
  margin-top: 40rpx;
}

.invite-btn view {
  display: inline-block;
  background: #FF832C;
  color: #fff;
  box-shadow: 0 4rpx 12rpx 0 #FFAC72;
  padding: 16rpx 94rpx;
  border-radius: 36rpx;
}

.close-icon {
  width: 42rpx;
  height: 76rpx;
}