/* pages/distribution/setting/setting.wxss */
page {
  background: #F5F5F5;
}

.topHead {
  background: #FFF6F3;
  color: #FF7747;
  text-align: center;
  padding: 24rpx;
  font-size: 28rpx;
  width: 100%;
}

.content-box {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.content-list {
  background: #fff;
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 24rpx 28rpx;
  border-radius: 4rpx;
}

.title {
  font-size: 28rpx;
  font-weight: 800;
  color: #000;
}

.name {
  color: #999;
}

.content-input {
  font-size: 28rpx;
  margin-top: 16rpx;
}

.subhead {
  font-size: 28rpx;
  color: #999;
  margin-top: 16rpx;
}

.textNum {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

.bottom-box {
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  left: 0;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bootom-btn {
  background: #FF613B;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 172rpx;
  border-radius: 36rpx;
}