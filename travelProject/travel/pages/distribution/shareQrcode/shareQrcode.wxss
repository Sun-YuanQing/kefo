/* pages/distribution/shareQrcode/shareQrcode.wxss */
.share-box {
  width: 100%;
  box-sizing: border-box;
  padding: 70rpx 96rpx 100rpx;
}

.share-img {
  width: 100%;
  margin-top: 96rpx;
}

.share-subtext {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

.save-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
}

.saveImg-box {
  background: #FF613B;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 400rpx;
  height: 72rpx;
  border-radius: 36rpx;
}

.saveImg-box image {
  width: 32rpx;
  height: 32rpx;
}

.saveImg-box text {
  color: #fff;
  font-size: 28rpx;
  margin-left: 24rpx;
}