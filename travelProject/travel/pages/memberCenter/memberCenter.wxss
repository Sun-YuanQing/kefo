/* pages/memberCenter/memberCenter.wxss */
page {
  background-color: #f5f5f5;
}

.memberCenterContainer {
  width: 100%;
  height: 100%;
  padding: 20rpx 30rpx 20rpx 30rpx;
  box-sizing: border-box;
}

.user-containter {
  padding: 36rpx;
}

.member-user {
  width: 690rpx;
  height: 316rpx;
  margin: 0 auto;
}
.img-bg {
  position: absolute;
  width: 690rpx;
  height: 316rpx;
}
.user-containter {
  position: absolute;
  z-index: 2;
}
.member-user-top {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.member-user-top .img {
  width: 68rpx;
  height: 68rpx;
  border-radius: 34rpx;
}

.user-type {
  font-size: 36rpx;
  color: #fff;
  line-height: 50rpx;
  font-weight: 700;
  padding-left: 20rpx;
}

.user-bottom-time {
  font-size: 24rpx;
  color: #fff;
  line-height: 34rpx;
  font-weight: 400;
  margin-left: 88rpx;
  margin-top: 16rpx;
}

.member-feature {
  padding: 0 28rpx 48rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.member-feature-header {
  padding: 48rpx 0 28rpx;
  border-bottom: 2rpx dashed #e4a432;
  display: flex;
}

.header-left {
  margin-right: 36rpx;
  margin-top: 10rpx;
}

.header-left .img {
  width: 86rpx;
  height: 68rpx;
}

.header-right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.header-right-top {
  font-size: 32rpx;
  color: #e4a432;
  line-height: 44rpx;
  font-weight: 700;
}

.header-right-bottom {
  font-size: 24rpx;
  color: #e4a432;
  line-height: 34rpx;
  padding-top:8rpx;
}

.member-feature-body {
  padding: 42rpx 28rpx 0 32rpx;
}

.body-list {
  display: flex;
  flex-direction: column;
  margin-top: 44rpx;
}
.body-list.first {
  margin-top: 0;
}
.body-list-header {
  color: #333333;
  font-size: 14px;
  line-height: 40rpx;
  font-weight: 700;
}

.body-list-content {
  padding-left: 20rpx;
  padding-top: 16rpx;
  color:#666666;
    font-size: 12px;
  line-height: 34rpx;
}
