/* hotelPackage/pages/goods/editPrice/editPrice.wxss */
page {
  background: #F5F5F5;
}

.content-box {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx 20rpx;
}

.item-list {
  background: #fff;
  border-radius: 12rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  margin-top: 20rpx;
}

.time-data {
  font-size: 28rpx;
  font-weight: 800;
}

.house-line {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.house-name {
  color: #666666;
  font-size: 28rpx;
}

.list-box {
  border-top: 1rpx solid #F5F5F5;
  margin-top: 20rpx;
  padding: 12rpx 0;
}

.type-line {
  display: flex;
  align-items: center;
  margin-top: 28rpx;
}

.type-title {
  width: 110rpx;
  font-size: 28rpx;
  color: #666666;
}

.type-content {
  font-size: 28rpx;
  font-weight: 800;
}

.type-recode {
  border-bottom: 1rpx solid #4D85FF;
  color: #4D85FF;
  font-size: 20rpx;
  margin-left: 20rpx;
}

.type-input {
  width: calc(100% - 130rpx);
  font-size: 28rpx;
}

.type-yuan {
  font-size: 24rpx;
  color: #333333;
}

.div-box {
  width: 100%;
  height: 100rpx;
}

.save-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-top: 1rpx solid #F5F5F5;
  background: #fff;
}

.save-btn {
  background: #4D85FF;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
  width: 400rpx;
  height: 72rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}