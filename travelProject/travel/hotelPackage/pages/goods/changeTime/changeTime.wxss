/* hotelPackage/pages/goods/changeTime/changeTime.wxss */
.time-line {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.month-box {
  text-align: center;
  margin: 0 40rpx;
  color: #333;
  border-bottom: 8rpx solid #fff;
}

.month-box:first-of-type {
  margin-left: 0;
}

.month-box .month {
  font-size: 32rpx;
}

.month-box .price {
  font-size: 24rpx;
  padding: 8rpx 0;
}

.sel-month {
  border-bottom: 8rpx solid #4d85ff;
  color: #000;
  font-weight: 800;
}

.data-line {
  display: flex;
  background: #f6f9ff;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
}

.data-line view {
  width: 80rpx;
  text-align: center;
  margin: 0 10rpx;
}

.data-line .red {
  color: #ff4b35;
}

.timeData-box {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 30rpx 34rpx;
}

.data-list {
  display: flex;
  flex-wrap: wrap;
  font-size: 28rpx;
  color: #333;
}

.singleton {
  width: 80rpx;
  height: 100rpx;
  text-align: center;
  margin: 6rpx 10rpx;
  display: inline-block;
}

.singleton .num {
  padding-top: 8rpx;
}

.singleton .price {
  color: #ff4b35;
  font-size: 20rpx;
}

.selSingleton {
  width: 78rpx;
  height: 98rpx;
  border: 1rpx solid #4d85ff;
  background: #f6f9ff;
  border-radius: 8rpx;
}

.no-singleton {
  color: #999 !important;
}

.save-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-top: 1rpx solid #F5F5F5;
  background: #fff;
}

.save-btn {
  background: #4D85FF;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
  width: 400rpx;
  height: 72rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}