/* hotelPackage/pages/hotelInfo/addTour/addTour.wxss */
page {
  background: #F5F5F5;
}

.content-box {
  margin-top: 20rpx;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.item-line {
  display: flex;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.item-label {
  font-size: 28rpx;
  color: #666666;
  width: 148rpx;
}

.item-input{
  width: calc(100% - 148rpx);
  font-size: 28rpx;
}

.save-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-top: 1rpx solid #F5F5F5;
  background: #fff;
}

.save-btn {
  background: #4D85FF;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
  width: 400rpx;
  height: 72rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}