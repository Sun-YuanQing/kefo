/* hotelPackage/pages/hotelInfo/infoList/infoList.wxss */
.gray {
  width: 100%;
  height: 20rpx;
  background: #F5F5F5;
}

.content-box {
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx 30rpx;
}

.list-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  border-bottom: 1rpx solid #F5F5F5;
  padding: 20rpx 0;
}

.personPhone {
  color: #333;
  font-size: 28rpx;
}

.item-phone {
  margin-left: 30rpx;
}

.IdCard {
  font-size: 24rpx;
  color: #999999;
  margin-top: 6rpx;
}

.edit-img {
  width: 42rpx;
  height: 40rpx;
}

.add-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-top: 1rpx solid #F5F5F5;
}

.add-btn {
  background: #4D85FF;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
  width: 400rpx;
  height: 72rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}