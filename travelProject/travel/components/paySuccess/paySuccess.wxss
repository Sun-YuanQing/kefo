/* components/paySuccess/paySuccess.wxss */
.pay-success {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  z-index: 100;
}

.success-box {
  text-align: center;
}

.success-img {
  width: 448rpx;
  height: 292rpx;
}

.success-text {
  font-size: 36rpx;
  font-weight: 800;
  margin-top: 20rpx;
}

.line-btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 156rpx;
}

.line-btn view {
  font-size: 28rpx;
  color: #4d85ff;
  border: 1rpx solid #4d85ff;
  padding: 20rpx 80rpx;
  border-radius: 44rpx;
}

.line-btn view:last-of-type {
  margin-left: 46rpx;
}