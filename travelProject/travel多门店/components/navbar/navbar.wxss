/* components/navbar/navbar.wxss */

.navbar_line {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  background: #fff;
  z-index: 9999999;
}

.navbat_content_box {
  position: relative;
}

.navbar_title {
  position: absolute;
  text-align: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  color: #000;
  font-size: 32rpx;
  font-weight: 800;
}

.navtar_img {
  width: 36rpx;
  height: 36rpx;
  margin-left: 30rpx;
}

.navtar_left_arrow {
  width: 44rpx;
  height: 44rpx;
  margin-left: 20rpx;
}

.nav_capsule {
  display: flex;
  align-items: center;
}
