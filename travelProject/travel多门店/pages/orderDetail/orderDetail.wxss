/* pages/orderDetail/orderDetail.wxss */

page {
  background: #f5f5f5;
}

.content-box {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 30rpx 40rpx;
}

.divide-box {
  background: #fff;
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
  border-radius: 12rpx;
}

.divide-line {
  display: flex;
  align-items: center;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.divide-line image {
  width: 144rpx;
  height: 144rpx;
  border-radius: 16rpx;
}

.divide-left {
  width: calc(100% - 168rpx);
  margin-left: 24rpx;
}

.divide-left .title {
  font-size: 28rpx;
  color: #333;
  font-weight: 800;
}

.divide-contet {
  color: #000;
  margin-top: 20rpx;
  font-weight: 800;
}

.divide-contet .rmb {
  font-size: 24rpx;
}

.divide-contet .price {
  font-size: 32rpx;
}

.divide-contet .rise {
  font-size: 20rpx;
}

.type-box {
  margin-top: 30rpx;
}

.type-line {
  display: flex;
  line-height: 70rpx;
}

.type-line .title {
  font-size: 28rpx;
  color: #999;
}

.type-line .content {
  font-size: 28rpx;
  width: calc(100% - 160rpx);
  margin-left: 50rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.other-content {
  font-size: 28rpx;
  width: calc(100% - 200rpx);
  margin-left: 50rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.type-line .content .tourist, .type-line .other-content .tourist {
  margin-right: 30rpx;
}

.type-line .content .tourist text, .type-line .other-content .tourist text {
  font-size: 24rpx;
  color: #999;
}

.type-line .content .room, .type-line .other-content  .room {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.foot-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

.bottom-box {
  width: 100%;
  background: #fff;
  border-top: 1rpx solid #f5f5f5;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.shop-dian {
  font-size: 20rpx;
}

.left-shopname {
  width: 270rpx;
  text-align: center;
}

.left-shopname image {
  width: 36rpx;
  height: 36rpx;
}

.shop-now {
  text-align: center;
  background: #4d85ff;
  width: 400rpx;
  height: 72rpx;
  line-height: 72rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
}

.waitPrice {
  background: #fff;
  width: 100%;
  box-sizing: border-box;
  padding: 28rpx;
  border-radius: 12rpx;
  margin-top: 20rpx;
}

.waitPrice-title {
  font-size: 28rpx;
  color: #000;
  font-weight: 800;
}

.amount-line {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
}

.amount-line .title {
  font-size: 28rpx;
  color: #666;
}

.amount-price {
  display: flex;
  align-items: center;
}

.amount-price .price {
  font-size: 32rpx;
  color: #ff4b35;
  font-weight: 800;
}

.amount-price .particulars {
  color: #4d85ff;
  font-size: 24rpx;
  border-bottom: 1rpx solid #4d85ff;
  margin-left: 20rpx;
}

.discount-line {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
}

.discount-line .title {
  font-size: 28rpx;
  color: #666;
}

.discount-line .discount {
  font-size: 24rpx;
  color: #ff4b35;
}

.coupon-line {
  display: flex;
  align-items: center;
}

.coupon-line .name {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.coupon-line image {
  width: 8rpx;
  height: 16rpx;
}

.pay-success {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
}

.success-box {
  text-align: center;
}

.success-img {
  width: 448rpx;
  height: 292rpx;
}

.success-text {
  font-size: 36rpx;
  font-weight: 800;
  margin-top: 20rpx;
}

.line-btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 156rpx;
}

.line-btn view {
  font-size: 28rpx;
  color: #4d85ff;
  border: 1rpx solid #4d85ff;
  padding: 20rpx 80rpx;
  border-radius: 44rpx;
}

.line-btn view:last-of-type {
  margin-left: 46rpx;
}

.detail-modal {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
}

.detail-box {
  background: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  border-radius: 24rpx 24rpx 0 0;
  padding-bottom: 84rpx;
}

.del-box {
  text-align: right;
}

.del-box image {
  width: 40rpx;
  height: 40rpx;
  margin: 32rpx;
}

.detail-content {
  width: 100%;
  box-sizing: border-box;
  padding: 0 44rpx;
}

.detail-title {
  font-size: 32rpx;
  color: #000;
  font-weight: 800;
}

.detail-main {
  background: #f6f9ff;
  border-radius: 12rpx;
  margin-top: 40rpx;
  color: #666;
  font-size: 24rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 28rpx;
}

.detail-line {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.detail-line:first-of-type {
  margin-top: 0;
}

.detail-line text {
  font-size: 20rpx;
  margin-left: 10rpx;
}

.pay-box {
  background: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  border-radius: 24rpx 24rpx 0 0;
}

.need-line {
  display: flex;
  justify-content: space-between;
  align-content: center;
  padding: 52rpx 0 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.need-line .title {
  font-size: 32rpx;
  font-weight: 800;
  color: #000;
  margin-left: 44rpx;
}

.need-price {
  margin-right: 44rpx;
  color: #ff4b35;
  font-weight: 800;
}

.need-price text:first-of-type {
  font-size: 20rpx;
}

.need-price text:last-of-type {
  font-size: 32rpx;
}

.pay-method {
  width: 100%;
  box-sizing: border-box;
  padding: 58rpx 44rpx 52rpx;
}

.pay-method .method {
  font-size: 32rpx;
  font-weight: 800;
  color: #000;
}

.gray-line {
  width: 100%;
  height: 20rpx;
  background: #f5f5f5;
}

.pay-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 60rpx;
}

.wxpay-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 40rpx;
}

.card-box text:first-of-type {
  font-size: 28rpx;
  color: #000;
  font-weight: 800;
}

.card-box text:last-of-type {
  font-size: 24rpx;
  color: #999;
  margin-left: 14rpx;
}

.wx-pay {
  font-size: 28rpx;
  color: #000;
  font-weight: 800;
}

.pay-submit {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.cancel-text {
  font-size: 32rpx;
  color: #999;
  height: 100rpx;
  line-height: 100rpx;
  width: calc(50% - 1rpx);
  text-align: center;
}

.shu-box {
  width: 2rpx;
  height: 28rpx;
  background: #d9d9d9;
}

.true-text {
  font-size: 32rpx;
  color: #4d85ff;
  height: 100rpx;
  line-height: 100rpx;
  width: calc(50% - 1rpx);
  text-align: center;
}
