.author-box {
  display: flex;
  align-items: flex-end;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-top: 20rpx;
}

.figure-sex {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.figure-btn {
  background: #fff;
  margin: 0;
  padding: 0;
  width: 160rpx;
  height: 160rpx;
  border-radius: 0;
}

.figure-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.sex-img {
  position: absolute;
  right: 0;
  top: 10rpx;
  width: 32rpx;
  height: 32rpx;
}

.author-content {
  margin-left: 56rpx;
}

.author-name {
  font-size: 32rpx;
  font-weight: 800;
  padding: 0;
  line-height: 1;
}

button::after {
  border: none;
}

.author-card {
  padding: 2rpx 20rpx;
  font-size: 20rpx;
  color: #4d85ff;
  border: 1rpx solid #4d85ff;
  background: #f6f9ff;
  border-radius: 16rpx;
  display: inline-block;
  margin-top: 16rpx;
  margin-bottom: 12rpx;
}

.classify-box {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 68rpx 52rpx 40rpx;
  align-items: center;
}

.balance-line {
  display: flex;
  align-items: center;
}

.balance-line .gray {
  background: #f5f5f5;
  width: 2rpx;
  height: 72rpx;
  margin-left: 56rpx;
}

.classify-item {
  text-align: center;
}

.classify-item .name {
  color: #666;
  font-size: 24rpx;
  margin-top: 24rpx;
}

.classify-item .number {
  font-weight: 800;
  font-size: 32rpx;
  color: #000;
}

.gray-line {
  width: 100%;
  background: #f5f5f5;
  height: 20rpx;
}

.order-box {
  padding: 40rpx 0;
}

.orderTitle-line {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.myOrder {
  font-size: 32rpx;
  color: #000;
  font-weight: 800;
}

.order-look {
  font-size: 24rpx;
  color: #999;
}

.orderImg-line {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.orderImg-item {
  text-align: center;
  margin-top: 20rpx;
}

.orderImg-box {
  position: relative;
  width: 80rpx;
  height: 80rpx;
}

.orderImg {
  width: 100%;
  height: 100%;
}

.badge {
  position: absolute;
  top: -12rpx;
  right: -20rpx;
  color: #fff;
  background: linear-gradient(127deg, rgba(255, 135, 84, 1) 0%, rgba(255, 91, 71, 1) 100%);
  border-radius: 14rpx 14rpx 14rpx 0;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
}

.orderImg-item .title {
  font-size: 24rpx;
  color: #333;
  margin-top: 4rpx;
}

.other-list {
  width: 100%;
  box-sizing: border-box;
  padding: 60rpx 30rpx 0;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.other-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 25%;
  align-items: center;
  margin-bottom: 60rpx;
}

.other-item image {
  width: 48rpx;
  height: 48rpx;
}

.other-item view {
  font-size: 24rpx;
  color: #333;
  margin-top: 16rpx;
}

.myOrder-list {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
}

.myOrder-box {
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 20rpx 50rpx;
}

.myOrder-content {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.order-img {
  width: 144rpx;
  height: 144rpx;
  border-radius: 16rpx;
}

.myOrder-right {
  width: calc(100% - 164rpx);
  margin-left: 20rpx;
}

.myOrder-title {
  font-size: 28rpx;
  color: #333;
  width: 400rpx;
  min-height: 80rpx;
}

.myOrder-pay {
  border: 1rpx solid #4d85ff;
  color: #4d85ff;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 26rpx;
}

.myOrder-yuan {
  font-size: 24rpx;
  font-weight: 800;
}

.myOrder-price {
  font-size: 32rpx;
  font-weight: 800;
}

.myOrder-open {
  font-size: 20rpx;
  font-weight: 800;
}

.seckill-old {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 8rpx;
}

.seckill-end {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 20rpx;
}

.seckill-box {
  width: calc(100% - 164rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.end-line {
  display: flex;
  align-items: center;
  color: #333;
  font-size: 24rpx;
}

.end-line .black {
  color: #fff;
  margin-left: 16rpx;
  margin-right: 8rpx;
  background: #333;
  padding: 4rpx 8rpx;
}

.form-end {
  color: #666;
}

.typeClose {
  color: #999;
}

.activity-box {
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 30rpx 0;
}