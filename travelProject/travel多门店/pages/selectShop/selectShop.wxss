/* pages/selectShop/selectShop.wxss */
.touch-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  height: 160rpx;
  overflow: hidden;
}
.cell{
  display: flex;
  align-items: center;
  height: 100%;
  width: 100%;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(160rpx);
  transform: translateX(160rpx);
  margin-left: -160rpx;
}
.del {
  background-color: #4D85FF;
  width: 160rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(160rpx);
  transform: translateX(160rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.index{
  width: 120rpx;
  text-align: center;
  font-size: 28rpx;
  color: #000;
  font-weight: 700;
}
.content{
  width: calc(100% - 120rpx);
  padding: 0 60rpx;
  box-sizing: border-box;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #F6F9FF;
  border-radius:80rpx 0px 0px 80rpx;
}
.content image{
  width: 52rpx;
  height: 48rpx;
}
.content .name{
  line-height: 2;
  font-size: 28rpx;
  font-weight: 700;
}
.content .time{
  line-height: 2;
  font-size: 24rpx;
  color: #999;
  
}