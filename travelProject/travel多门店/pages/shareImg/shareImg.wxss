/* pages/shareImg/shareImg.wxss */

.share-box {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 68rpx 28rpx;
}

.share-img {
  width: 100%;
  box-shadow: 4rpx 8rpx 16rpx 0 rgba(215, 215, 215, 0.5);
  border-radius: 12rpx;
}

.share-subtext {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

.save-box {
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
}

.saveImg-box {
  background: #4d85ff;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 400rpx;
  height: 72rpx;
  border-radius: 36rpx;
}

.saveImg-box image {
  width: 32rpx;
  height: 32rpx;
}

.saveImg-box text {
  color: #fff;
  font-size: 28rpx;
  margin-left: 24rpx;
}
