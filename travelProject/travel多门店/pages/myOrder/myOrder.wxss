/* pages/myOrder/myOrder.wxss */

.orderTitle-line {
  display: flex;
  justify-content: space-around;
  background: #fff;
  font-size: 28rpx;
  color: #999;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}

.sel-orderTitle {
  font-size: 32rpx;
  color: #000;
  font-weight: 800;
  border-bottom: 8rpx solid #4d85ff;
}

.myOrder-list {
  position: absolute;
  width: 100%;
  min-height: calc(100% - 70rpx);
  box-sizing: border-box;
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
}

.myOrder-box {
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 20rpx 50rpx;
}

.wait-pay {
  font-size: 20rpx;
  color: #ff4b35;
  text-align: right;
}

.pay-success {
  font-size: 20rpx;
  color: #333;
  text-align: right;
}

.pay-close {
  font-size: 20rpx;
  color: #999;
  text-align: right;
}

.myOrder-content {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.order-img {
  width: 144rpx;
  height: 144rpx;
  border-radius: 16rpx;
}

.myOrder-right {
  width: calc(100% - 164rpx);
  margin-left: 20rpx;
}

.myOrder-title {
  font-size: 28rpx;
  color: #333;
  width: 400rpx;
  min-height: 80rpx;
}

.price-pay {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.myOrder-pay {
  border: 1rpx solid #4d85ff;
  color: #4d85ff;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 26rpx;
}

.myOrder-yuan {
  font-size: 24rpx;
  font-weight: 800;
}

.myOrder-price {
  font-size: 32rpx;
  font-weight: 800;
}

.myOrder-open {
  font-size: 20rpx;
  font-weight: 800;
}

.seckill-old {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 8rpx;
}

.seckill-end {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 20rpx;
}

.seckill-box {
  width: calc(100% - 164rpx);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.end-line {
  display: flex;
  align-items: center;
  color: #333;
  font-size: 24rpx;
}

.end-line .black {
  color: #fff;
  margin-left: 16rpx;
  margin-right: 8rpx;
  background: #333;
  padding: 4rpx 8rpx;
}

.form-end {
  color: #666;
}

.typeClose {
  color: #999;
}

.no-box {
  width: 100%;
  text-align: center;
  margin-top: 204rpx;
}

.no-img {
  width: 462rpx;
  height: 256rpx;
}

.no-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 24rpx;
}
