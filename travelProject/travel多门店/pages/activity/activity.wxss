.tabs-box {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  padding: 20rpx 0 24rpx;
}

.tabs-div {
  color: #999;
  font-size: 28rpx;
  text-align: center;
  margin-top: 16rpx;
}

.tabs-img {
  width: 100rpx;
  height: 100rpx;
}

.tabs-sel {
  font-weight: 800;
  color: #000;
}

.grad-box {
  background: #f5f5f5;
  width: 100%;
  height: 20rpx;
}

.content-main {
  background: #fff;
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 30rpx;
}

.no-box {
  width: 100%;
  text-align: center;
  margin-top: 204rpx;
}

.no-img {
  width: 462rpx;
