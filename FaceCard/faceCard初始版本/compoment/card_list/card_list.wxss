/* compoment/card_list.wxss */
page{
  background: #f5f5f5;
}
.card_list{
  width: 100%;
  height: 100%;
}
.cards_item{
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.nav_bar{
  display: flex;
  align-items: center;
  height: 105rpx;
  padding: 0 30rpx;
  margin: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  background: #fff;
}

.my_card{
  background: #fff;
  padding: 0 30rpx 40rpx;
}
.title_wrap{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
}
.title_wrap .title{
  font-size: 30rpx;
  font-weight: 700;
}
.title_wrap .card_num{
  color: #666;
  font-size: 26rpx;
  display: flex;
  align-items: center;
}
.title_wrap .card_num image{
  width: 18rpx;
}
.other_content{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
}
.other_content view:first-child{
  font-size: 34rpx;
}
.card_money{
  font-size: 26rpx;
}
.card_money image{
  width: 10rpx;
  height: 20rpx;
  margin-left: 16rpx
}
.card_item{
  width: 100%;
  height: 180rpx;
  box-sizing: border-box;
  padding: 30rpx 40rpx;
  color: #fff;
  font-size: 26rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

