/* pages/mine/about/about.wxss */
page{
  box-sizing: border-box;
  background: #f5f5f5;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  color: #666;
}
.container{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background: #fff;
}
.content{
  width: 100%;
  height: 100%;
  padding: 0 90rpx 220rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.content .logo{
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
}
.content .logo image{
  width: 160rpx;
}
.content .description{
  margin: 100rpx 0 60rpx;
  text-align: center;
  line-height: 1.8;
}
.content .wechat text{
  color: #000;
}
.footer{
  width: 100%;
  text-align: center;
  position: fixed;
  bottom: 50rpx;
}