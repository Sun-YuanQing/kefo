/* pages/mine/index/index.wxss */
page{
  background: #f5f5f5;
}
.header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 100rpx 30rpx;
  background: #fff;
  position: relative;
}
.header .name{
  width: 300rpx;
  white-space:nowrap; 
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 32rpx;
}
.header_left{
  display: flex;
  align-items: center;
}
.header .img_wrap{
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-right: 60rpx;
  overflow: hidden;
}
.img_wrap .avatar{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
}
.img_wrap .sex{
  position: absolute;
  right: 0;
  top: 20rpx;
  width: 32rpx;
  height: 32rpx;
}
.ticket{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  margin: 20rpx 0;
  padding: 0 30rpx;
  height: 120rpx;
}
.ticket .title{
  display: flex;
  align-items: center;
  font-size: 32rpx;
}
.ticket .title image{
  width: 76rpx;
  height: 76rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.ticket .content{
  font-size: 26rpx;
  color: #999;
}

.layout{
 width: 100%;
 height: 80rpx;
 line-height: 80rpx;
 color: #FF4142;
 font-size: 32rpx;
 text-align: center;
 position: fixed;
 bottom: 10rpx;
 background: #fff;
}





