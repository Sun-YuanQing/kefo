/* pages/card_bag/charge_auto/charge_auto.wxss */
page{
  background: #f5f5f5;
}
.container{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
  overflow: hidden;
}
.form{
  width: 100%;
  border-radius: 16rpx;
  background: #fff;
  font-size: 28rpx;
  padding: 60rpx 30rpx;
  margin: 20rpx 0 60rpx;
  box-sizing: border-box;
}
input{
  margin-top: 30rpx;
  border-bottom: 1px solid #f0f0f0;
  height: 70rpx;
  font-weight: 700;
  font-size: 68rpx;
  padding-left: 40rpx;
  position: relative;
}
input::before{
  content: "ï¿¥";
  font-size: 32rpx;
  font-weight: 700;
  position: absolute;
  left: 0;
  bottom: 10rpx;
}
.tip{
  color: #999;
  margin-top: 30rpx;
  font-size: 28rpx;
  height: 28rpx;
}
.title{
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 35rpx;
}
.title view{
  width: 6rpx;
  height: 32rpx;
  background:#FF4142;
  border-radius: 6rpx;
  margin-right: 20rpx;
}
.way_list{
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.btn_wrap{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.btn_wrap .btn{
  width: 568rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 32rpx;
  margin-top: 80rpx;
  border-radius: 44rpx;
}
.red{
  background: linear-gradient(90deg,rgba(237,57,57,1) 0%,rgba(255,93,82,1) 100%);
  box-shadow: 0rpx 12rpx 20rpx 0rpx rgba(255,209,206,1);
  color: #fff;
}
.gray{
  background: #f0f0f0;
  color: #D4D4D4;
}
.agreement{
  font-size: 24rpx;
  display: flex;
  align-items: center;
  margin-top: 34rpx;
}
