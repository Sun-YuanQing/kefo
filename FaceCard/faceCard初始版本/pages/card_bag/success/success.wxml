<!--pages/card_bag/success/success.wxml-->
<view class="container">
  <image src="../../../images/success.png" mode="widthFix" style="width: 448rpx;"></image>
  <view class="tip">恭喜您，充值成功!</view>

  <view class="detail">
    <view class="detail_left">
      <image src="../../../images/charge.png" mode="widthFix"></image>
      <text>已到账</text>
    </view>
    <view><text class="weight">{{options.total}}</text>元</view>
  </view>

  <view class="btn" bindtap="reback">确定</view>

</view>
