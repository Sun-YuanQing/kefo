/**app.wxss**/
page{
  width: 100%;
  height: 100%;
}

.navigator-hover{
  background-color: transparent;
}

.cells{
  background: #fff;
  margin: 20rpx 0;
}
.cell{
  display: flex;
  align-items: center;
  padding-left: 40rpx;
}
.cell > image{
  width: 44rpx;
  height: 44rpx;
  margin-right: 40rpx;
}
.cell_content{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
  padding: 20rpx 30rpx 20rpx 0;
}
.cell_left{
  font-size: 32rpx;
}
.cell_right{
  display: flex;
  align-items: center;
}
.cell_right text{
  color: #333;
  font-size: 32rpx;
}
.cell_right text.info{
  /* display: inline-block;
  height: 32rpx;
  line-height: 32rpx; */
  background: #FF4142;
  padding: 2rpx 10rpx;
  border-radius: 40%;
  color: #fff;
  font-size: 24rpx;
}
image.right{
  width: 12rpx;
  height: 24rpx;
  margin-left: 20rpx;
}
