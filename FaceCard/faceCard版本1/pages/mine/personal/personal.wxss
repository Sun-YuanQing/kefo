/* pages/mine/personal/personal.wxss */
page{
  background: #f5f5f5;
}
.avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.picker{
  display: flex;
  align-items: center;
}
.avatar_wrap{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

/* 弹窗 */
.popup{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: rgba(0, 0, 0, .5);
}
.popup_container{
  position: absolute;
  left: 50%;
  top: 43%;
  width: 80%;
  max-width: 600rpx;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
  font-size: 32rpx;
}
.popup_title{
  width: 100%;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
  text-align: center;
}
.popup_content{
  margin: 0 40rpx 40rpx;
  text-align: center;
  font-size: 28rpx;
}
.popup_content input{
  height: 80rpx;
  line-height: 80rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}
.popup_btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  border-top: 1px solid #f5f5f5;
}
.popup_btn text{
  width: 50%;
  display: block;
  text-align: center;
}
.popup_btn .btn_ok{
  color: #FF4142;
}
.popup_btn .btn_no{
  color: #666;
  border-right: 1px solid #f5f5f5;
}