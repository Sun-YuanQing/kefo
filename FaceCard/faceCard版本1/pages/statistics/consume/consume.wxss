/* pages/card_bag/bill/bill.wxss */

page {
  background: #f5f5f5;
}

.dataNone {
  font-size: 28rpx;
  color: #ccc;
  padding: 40rpx 0;
  text-align: center;
}

.bg {
  width: 100%;
  height: 376rpx;
  color: #fff;
  background: linear-gradient(#ffbe45, #ff931a);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 2.3;
  font-size: 28rpx;
}

.bg .balance {
  font-size: 32rpx;
}

.bg .amount {
  font-size: 58rpx;
  font-weight: 700;
}

.bg .amount text {
  font-size: 28rpx;
}

.bg .total text {
  padding: 0 20rpx;
}

.month {
  width: 100%;
  height: 120rpx;
  box-sizing: border-box;
  background: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 20rpx solid #f5f5f5;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  display: flex;
}

.month .button {
  width: 180rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  background: #f5f5f5;
  font-weight: 700;
}

.month .button .picker {
  display: flex;
  align-items: center;
  justify-content: center;
}

.month .button image {
  width: 16rpx;
  height: 8rpx;
  padding-left: 12rpx;
}

.bill_list {
  background: #fff;
  padding: 120rpx 40rpx 0;
  height: calc(100% - 120rpx);
}

.bill_list .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 120rpx;
  font-size: 30rpx;
  font-weight: 700;
  line-height: 1.8;
  border-bottom: 1rpx solid #f5f5f5;
}

.bill_list .item .left > view:nth-of-type(2) {
  font-size: 24rpx;
  color: #999;
}

.typeBox {
  transition: 3s;
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  z-index: 100;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.typeWrap {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header view {
  padding: 30rpx 60rpx;
  font-size: 34rpx;
  color: #666;
}

.header view:nth-of-type(2) {
  color: #ff4142;
}

.typeWrap .content {
  border-top: 1px solid #f5f5f5;
}

.typeWrap .content .title {
  text-align: center;
  font-size: 28rpx;
}

.typeWrap .content .list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 30rpx 30rpx;
  text-align: center;
}

.itemclass {
  width: 216rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #666;
}

.itemclass:nth-child(3n+2) {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.selItem {
  border: 2rpx solid #ff4142;
  background: #ffefef;
  color: #ff4142;
  width: 212rpx;
  height: 56rpx;
  line-height: 56rpx;
}

.noBox {
  text-align: center;
  margin-top: 400rpx;
  position: relative;
  padding-bottom: 300rpx;
}

.noImg {
  width: 280rpx;
  height: 280rpx;
}

.noName {
  color: #999;
  font-size: 24rpx;
  position: absolute;
  top: 170rpx;
  margin: 0 auto;
  width: 100%;
}
