/* pages/statistics/balance/balance.wxss */
page{
  background-color: #f5f5f5;
}
.container{
  width: 100%;
  height: calc(100% - 30rpx);
  padding: 0 40rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
  background-color: #fff;
  overflow: auto;
}
.item{
  display: flex;
  height: 150rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  font-weight: 700;
  border-bottom: 1px solid #f5f5f5;
  line-height: 1.8;
}
.item .left > view:nth-of-type(2){
  font-size: 24rpx;
  color: #999;
}
