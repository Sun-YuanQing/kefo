/* compoment/card_list.wxss */

page {
  background: #f5f5f5;
}

.head_card {
  background: #fff;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
}

.now_user {
  border: 1rpx solid #ccc;
  color: #666;
  margin-right: 40rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  padding: 10rpx 60rpx;
}

.user_sel {
  background: #f5f5f5;
  border: 1rpx solid #f5f5f5;
  color: #000;
  font-weight: 800;
}

.card_list {
  width: 100%;
  height: 100%;
}

.cards_item {
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.nav_bar {
  display: flex;
  align-items: center;
  height: 105rpx;
  padding: 0 30rpx;
  margin: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  background: #fff;
}

.my_card {
  background: #fff;
  padding: 0 30rpx 40rpx;
}

.title_wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
}

.title_wrap .title {
  font-size: 30rpx;
  font-weight: 700;
}

.title_wrap .card_num {
  color: #666;
  font-size: 26rpx;
  display: flex;
  align-items: center;
}

.title_wrap .card_num image {
  width: 18rpx;
}

.other_content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
}

.other_content view:first-child {
  font-size: 34rpx;
}

.other_detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
}

.class_box {
  font-size: 20rpx;
  font-weight: 800;
}

.className {
  font-size: 36rpx;
}

.childName {
  font-size: 20rpx;
}

.card_money {
  font-size: 26rpx;
}

.card_money image {
  width: 10rpx;
  height: 20rpx;
  margin-left: 16rpx;
}

.card_item {
  width: 100%;
  height: 180rpx;
  box-sizing: border-box;
  padding: 30rpx 40rpx;
  color: #fff;
  font-size: 26rpx;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.finish_img {
  position: absolute;
  top: 24rpx;
  right: 208rpx;
  width: 132rpx;
  height: 132rpx;
}
