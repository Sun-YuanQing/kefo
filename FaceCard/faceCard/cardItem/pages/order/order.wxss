/* cardItem/pages/order/order.wxss */

page {
  background: #f5f5f5;
}

.shop_info {
  background: #fff;
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 30rpx 40rpx 40rpx;
}

.line_shop {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.line_subshop {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.left_title {
  font-size: 24rpx;
  font-weight: 800;
  width: 620rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  border-right: 1rpx solid #f0f0f0;
}

.left_subhead {
  font-size: 20rpx;
  color: #666;
  width: 620rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  border-right: 1rpx solid #f0f0f0;
}

.tel_img {
  width: 24rpx;
  height: 30rpx;
}

.local_img {
  width: 24rpx;
  height: 30rpx;
}

.member_tel {
  display: flex;
  justify-content: space-between;
  background: #fff;
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 30rpx 30rpx 40rpx;
  color: #666;
  font-size: 28rpx;
}

.card_detail_box {
  background: #fff;
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 26rpx 40rpx;
}

.top_card_detail {
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}

.top_img_text {
  width: 148rpx;
  height: 94rpx;
  overflow: hidden;
  border-radius: 16rpx;
  position: relative;
}

.top_card_img {
  width: 100%;
  height: 100%;
}

.top_card_text {
  position: absolute;
  top: 8rpx;
  left: 14rpx;
  color: #fff;
  font-size: 20rpx;
}

.top_card_name {
  font-size: 26rpx;
  margin-left: 20rpx;
  width: calc(100% - 168rpx);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.bottom_card_detail {
  display: flex;
  justify-content: space-between;
  padding-top: 26rpx;
}

.bottom_left {
  font-size: 20rpx;
  font-weight: 800;
}

.feicard_left {
  color: #666;
  text-decoration: line-through;
  font-size: 28rpx;
}

.bottom_left_big {
  font-size: 28rpx;
}

.bottom_right {
  display: flex;
  align-items: center;
}

.bottom_right_money {
  width: 104rpx;
  height: 28rpx;
  margin-left: 16rpx;
}

.bottom_right_info {
  width: 26rpx;
  height: 26rpx;
  margin-left: 16rpx;
}

.line_way {
  display: flex;
  justify-content: space-between;
  background: #fff;
  margin-top: 20rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx 30rpx 30rpx 40rpx;
  align-items: center;
}

.pay_away {
  font-size: 28rpx;
  color: #666;
}

.card_pay {
  font-weight: 800;
  font-size: 28rpx;
}

.coupon_sel {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.coupon_sel image {
  width: 12rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

.bottom_foot {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

.coupon_box {
  background: rgba(255, 255, 255, 0.45);
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  color: #ff4142;
}

.left_rount {
  font-size: 20rpx;
  border: 1rpx solid #ff4142;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  margin-right: 10rpx;
}

.coupon_pay {
  font-size: 24rpx;
  margin-right: 30rpx;
}

.left_coupon_box {
  display: flex;
  align-items: center;
  margin-left: 40rpx;
  font-size: 24rpx;
}

.line_pay {
  display: flex;
  height: 99rpx;
  line-height: 100rpx;
}

.left_all {
  display: flex;
  justify-content: center;
  width: 50%;
  border-top: 1rpx solid #f0f0f0;
  align-items: center;
  background: #fff;
  height: 99rpx;
}

.summation {
  font-size: 20rpx;
  font-weight: 800;
}

.pay_all {
  display: flex;
  font-size: 20rpx;
  color: #ff4142;
  align-items: baseline;
}

.pay_all_big {
  font-size: 36rpx;
}

.payment {
  background: linear-gradient(90deg, rgba(237, 57, 57, 1) 0%, rgba(255, 93, 82, 1) 100%);
  width: 50%;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
}

.payment_box {
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #fff;
}

.success_img {
  width: 244rpx;
  height: 236rpx;
  margin-top: 110rpx;
}

.success_text {
  font-size: 36rpx;
  margin-top: 64rpx;
  font-weight: 800;
}

.line_money {
  display: flex;
  justify-content: center;
  align-items: baseline;
  font-size: 20rpx;
  font-weight: 800;
  margin-top: 24rpx;
}

.line_money_big {
  font-size: 32rpx;
}

.line_return {
  display: flex;
  justify-content: space-around;
  margin-top: 100rpx;
}

.item_return {
  font-size: 32rpx;
  color: #666;
  border-radius: 44rpx;
  background: #f0f0f0;
  width: 240rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}
