/* cardItem/pages/cardlist/cardlist.wxss */

page {
  background: #f5f5f5;
}

.head_tabs {
  height: 88rpx;
  width: 100%;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.item_tabs {
  color: #666;
  font-size: 28rpx;
  padding: 0 14rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.sel_tabs {
  color: #000;
  font-weight: 800;
  border-bottom: 8rpx solid #ff4142;
  height: 80rpx;
}

.main_box {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx 30rpx;
}

.card_box {
  background: #fff;
  margin-top: 30rpx;
  border-radius: 16rpx;
  position: relative;
}

.card_img_back {
  width: 100%;
  height: 332rpx;
}

.title_box {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 0 30rpx 16rpx;
}

.card_title {
  font-weight: 800;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.card_line_box {
  display: flex;
  justify-content: space-between;
  margin-top: 4rpx;
}

.left_card_money {
  font-size: 20rpx;
  font-weight: 800;
}

.left_card_big {
  font-size: 28rpx;
}

.right_card_money {
  font-size: 20rpx;
  color: #ff4142;
  font-weight: 800;
}

.right_card_big {
  font-size: 32rpx;
}

.right_face_img {
  width: 104rpx;
  height: 28rpx;
  margin: 0 20rpx;
}

.top_name {
  position: absolute;
  color: #fff;
  font-size: 28rpx;
  top: 24rpx;
  left: 28rpx;
}

.top_right_box {
  position: absolute;
  color: #fff;
  font-size: 24rpx;
  top: 22rpx;
  right: 6rpx;
}

.text_nei_box {
  position: relative;
}

.top_right_back {
  width: 124rpx;
  height: 42rpx;
}

.top_right_text {
  position: absolute;
  top: 0;
  right: 0;
  width: 110rpx;
  height: 42rpx;
  text-align: center;
  line-height: 42rpx;
}

.no_box {
  width: 100%;
  margin-top: 50%;
  text-align: center;
}

.no_card_img {
  width: 278rpx;
  height: 196rpx;
}

.no_card_text {
  font-size: 24rpx;
  color: #999;
}

.merchant_line {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.merchant_card_title {
  width: 590rpx;
  font-size: 28rpx;
  font-weight: 800;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 32rpx;
}

.more_img_box {
  position: relative;
  padding: 0 20rpx;
}

.more_img {
  width: 6rpx;
  height: 32rpx;
}

.merchant_recommend {
  position: absolute;
  right: -38rpx;
  bottom: -100rpx;
}

.back_recommend_box {
  position: relative;
}

.back_recommend {
  width: 148rpx;
  height: 76rpx;
}

.recommend_text {
  position: absolute;
  top: 26rpx;
  left: 0;
  width: 148rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ff4142;
}
