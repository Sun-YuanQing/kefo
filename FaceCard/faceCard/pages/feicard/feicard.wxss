/* cardItem/pages/feicard/feicard.wxss */

page {
  background: #f5f5f5;
}

.head_tab {
  background: #fff;
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
}

.tab_sel {
  font-weight: 800;
  color: #000;
}

.find_box {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 30rpx 10rpx;
  background: #fff;
  margin-top: 20rpx;
}

.input_box {
  border: 1rpx solid #ccc;
  width: 552rpx;
  height: 80rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
}

.find_input {
  color: #999;
  font-size: 28rpx;
  margin-left: 18rpx;
}

.search_img {
  width: 34rpx;
  height: 30rpx;
  margin-left: 32rpx;
}

.my_like {
  width: 116rpx;
  height: 80rpx;
  border: 1rpx solid #ccc;
  border-radius: 40rpx;
  margin-left: 22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.my_like image {
  width: 46rpx;
  height: 40rpx;
  vertical-align: middle;
}

.contain_box {
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.card_item {
  position: relative;
  overflow: hidden;
  margin-top: 20rpx;
}

.back_img {
  width: 100%;
  height: 200rpx;
  border-radius: 16rpx 0 0 16rpx;
}

.sub_card {
  position: absolute;
  right: 0;
  top: 0;
  background: #fff;
  width: 530rpx;
  height: 200rpx;
  -webkit-clip-path: polygon(0 200rpx, 50rpx 0, 530rpx 0, 530rpx 200rpx);
  box-sizing: border-box;
  padding-right: 30rpx;
  border-radius: 0 16rpx 16rpx 0;
}

.sub_title {
  font-size: 28rpx;
  margin: 40rpx 0 0 50rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.sub_num {
  font-size: 24rpx;
  margin: 4rpx 0 0 44rpx;
}

.line_fei {
  margin-left: 36rpx;
  margin-top: 40rpx;
}

.line_money {
  font-size: 20rpx;
  font-weight: 800;
}

.money_big {
  font-size: 28rpx;
}

.fei_img {
  width: 104rpx;
  height: 28rpx;
  margin-left: 20rpx;
}

.line_sub {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.enshrine {
  font-size: 20rpx;
}

.collect_img {
  width: 32rpx;
  height: 28rpx;
  margin-left: 10rpx;
}

.card_class {
  position: absolute;
  top: 34rpx;
  left: 46rpx;
  color: #fff;
  font-size: 20rpx;
}

.reset_box {
  position: fixed;
  bottom: 20rpx;
  right: 30rpx;
  background: #fff;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.reset_img {
  width: 58rpx;
  height: 56rpx;
}

.modal_box {
  position: absolute;
  top: 210rpx;
  right: 50rpx;
  width: 210rpx;
  height: 108rpx;
  color: #fff;
  font-size: 24rpx;
  box-sizing: border-box;
  padding: 26rpx 14rpx 14rpx 18rpx;
  line-height: 34rpx;
}
