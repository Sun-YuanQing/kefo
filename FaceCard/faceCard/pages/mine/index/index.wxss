/* pages/mine/index/index.wxss */

page {
  background: #f5f5f5;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 100rpx 30rpx;
  background: #fff;
  position: relative;
}

.header .name {
  width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 32rpx;
}

.header_left {
  display: flex;
  align-items: center;
}

.header .img_wrap {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-right: 60rpx;
  overflow: hidden;
}

.img_wrap .avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
}

.img_wrap .sex {
  position: absolute;
  right: 0;
  top: 20rpx;
  width: 32rpx;
  height: 32rpx;
}

.ticket {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  padding: 0 30rpx;
  height: 120rpx;
}

.ticket_content {
  text-align: center;
}

.ticket_img {
  width: 66rpx;
  height: 66rpx;
}

.ticket_title {
  font-size: 20rpx;
}

.layout {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #ff4142;
  font-size: 32rpx;
  text-align: center;
  position: fixed;
  bottom: 10rpx;
  background: #fff;
}
