/* pages/mine/order/order.wxss */

page {
  background: #f5f5f5;
}

.head_tab {
  background: #fff;
  display: flex;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
}

.tab {
  border: 1rpx solid #ccc;
  border-radius: 30rpx;
  color: #666;
  font-size: 28rpx;
  width: 200rpx;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
}

.tab_sel {
  background: #f5f5f5;
  border: 1rpx solid #f5f5f5;
  color: #000;
  font-weight: 800;
}

.project_box {
  width: calc(100% - 60rpx);
  margin: 20rpx 30rpx 0;
  background: #fff;
  border-radius: 16rpx;
  display: flex;
  box-sizing: border-box;
  padding: 10rpx;
}

.project_img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
}

.project_right {
  margin-left: 20rpx;
  width: calc(100% - 210rpx);
}

.wait {
  font-size: 20rpx;
  color: #ff4142;
  text-align: right;
  margin-top: 14rpx;
}

.project_title {
  font-size: 28rpx;
  font-weight: 800;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 308rpx;
  margin-top: 14rpx;
}

.line_box {
  display: flex;
  justify-content: space-between;
}

.currentPrice {
  font-size: 20rpx;
  font-weight: 800;
}

.currentPrice_big {
  font-size: 28rpx;
}

.originalCost {
  font-size: 20rpx;
  color: #666;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.promptly {
  color: #ff4142;
  font-size: 24rpx;
  border: 1rpx solid #ed3939;
  border-radius: 44rpx;
  width: 146rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  margin-top: 24rpx;
}

.card_box {
  width: calc(100% - 60rpx);
  margin: 20rpx 30rpx 0;
  background: #fff;
  border-radius: 16rpx;
  box-sizing: border-box;
  padding: 20rpx 10rpx;
}

.card_top {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
}

.card_img {
  width: 180rpx;
  height: 101rpx;
  margin-bottom: 10rpx;
  border-radius: 16rpx;
}

.card_right {
  margin-left: 20rpx;
  width: calc(100% - 210rpx);
}

.line_title {
  font-weight: 800;
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 308rpx;
}

.card_promptly {
  color: #ff4142;
  font-size: 24rpx;
  border: 1rpx solid #ed3939;
  border-radius: 44rpx;
  width: 146rpx;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  margin-top: 14rpx;
}

.money {
  font-size: 24rpx;
  font-weight: 800;
}

.line_fei {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
}

.old_price {
  color: #666;
  font-size: 24rpx;
  text-decoration: line-through;
}

.line_right {
  display: flex;
  align-items: center;
}

.fei_price {
  font-size: 24rpx;
  font-weight: 800;
}

.fei_img {
  width: 104rpx;
  height: 28rpx;
  margin-left: 6rpx;
}
