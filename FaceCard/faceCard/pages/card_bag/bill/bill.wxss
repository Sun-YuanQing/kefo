/* pages/card_bag/bill/bill.wxss */
page{
  background: #f5f5f5;
}
.dataNone{
  text-align: center;
  margin-top: 400rpx;
  position: relative;
  padding-bottom: 300rpx;
}
.bill_list .dataNone image{
  width: 280rpx;
  height: 280rpx;
}
.noName{
  color: #999999;
  font-size: 24rpx;
  position: absolute;
  top: 200rpx;
  margin: 0 auto;
  width: 100%;
}
.bg{
  width: 100%;
  height: 376rpx;
  color: #fff;
  background: linear-gradient(#FFBE45,#FF931A);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 2.3;
  font-size: 28rpx;
}
.bg .balance{
  font-size: 32rpx;
}
.bg .amount{
  font-size: 58rpx;
  font-weight: 700;
}
.bg .amount text{
  font-size: 28rpx;
}
.bg .total text{
  padding: 0 20rpx
}
.month{
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 20rpx solid #f5f5f5;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99
}
.month .button{
  width: 180rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  background: #f5f5f5;
  font-weight: 700;
}
.month .button .picker{
  display: flex;
  align-items: center;
  justify-content: center;
}
.month .button image{
  width: 16rpx;
  height: 8rpx;
  padding-left: 12rpx;
}
.month .detail{
  font-size: 24rpx;
  color: #999;
}
.month .detail text{
  display: inline-block;
  padding-right: 30rpx;
  position: relative;
}
.month .detail text::after{
  display: block;
  content: '';
  position: absolute;
  right: 12rpx;
  top: 8rpx;
  height: 24rpx;
  width: 1px;
  border-left: 1px solid #e5e5e5;
}
.month .detail text:last-of-type::after{
  border: none;
}
.bill_list{
  background: #fff;
  padding-top: 160rpx;
  height: calc(100% - 160rpx);
}
.bill_list image{
    width: 80rpx;
    height: 80rpx;
}
.bill_item{
  display: flex;
  background: #fff;
  align-items: center;
  padding-left: 30rpx;
}
.bill_content{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
  padding: 20rpx 40rpx 20rpx 0;
  margin-left: 40rpx;
  font-size: 28rpx;
  line-height: 1.5;
}
.bill_content .font12{
  font-size: 24rpx;
  color: #999;
}
.bill_content .money{
  display: flex;
  flex-direction: column;
  font-weight: 700;
}
.bill_content .down{
  width: 16rpx;
  height: 8rpx;
  padding: 16rpx 0 0 12rpx;
}
.bill_detail{
  padding: 0 40rpx;
  background: #f5f5f5;
  font-size: 24rpx;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #666;
}
.bill_detail .way,.bill_detail .way > view{
  display: flex;
  align-items: center;
}
.bill_detail .way > view{
  margin-right: 20rpx;
}
.bill_detail image{
  width: 44rpx;
  height: 44rpx;
  margin-right: 6rpx;
}
.weight{
  font-weight: 700;
}