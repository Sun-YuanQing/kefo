/* pages/card_bag/balance/balance.wxss */
.container{
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size: 32rpx;
  position: relative;
}
.purse{
  display: flex;
  align-items: center;
}
.purse image{
  margin-bottom: 10rpx;
}
.amount{
  padding: 60rpx 0 230rpx;
  font-weight: 700;
}
.amount text{
  font-size: 80rpx;
}

.charge{
  width: 448rpx;
  height: 88rpx;
  background: linear-gradient(90deg,rgba(237,57,57,1) 0%,rgba(255,93,82,1) 100%);
  box-shadow: 0rpx 12rpx 20rpx 0rpx rgba(255,209,206,1);
  border-radius: 44rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
}
.detail{
  color: #FF4142;
  margin-top: 40rpx;
}
