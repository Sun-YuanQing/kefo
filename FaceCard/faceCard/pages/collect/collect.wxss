/* pages/collect/collect.wxss */

page {
  background: #f5f5f5;
}

.contain_box {
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.card_item {
  position: relative;
  margin-top: 20rpx;
}

.back_img {
  width: 100%;
  height: 200rpx;
  border-radius: 16rpx;
}

.sub_card {
  position: absolute;
  right: 0;
  top: 0;
  background: #fff;
  width: 530rpx;
  height: 200rpx;
  -webkit-clip-path: polygon(0 200rpx, 50rpx 0, 530rpx 0, 530rpx 200rpx);
  box-sizing: border-box;
  padding-right: 30rpx;
  border-radius: 0 16rpx 16rpx 0;
}

.sub_title {
  font-size: 28rpx;
  margin: 40rpx 0 0 50rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.sub_num {
  font-size: 24rpx;
  margin: 4rpx 0 0 44rpx;
}

.line_fei {
  margin-left: 36rpx;
  margin-top: 40rpx;
}

.line_money {
  font-size: 20rpx;
  font-weight: 800;
}

.money_big {
  font-size: 28rpx;
}

.fei_img {
  width: 104rpx;
  height: 28rpx;
  margin-left: 20rpx;
}

.line_sub {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.enshrine {
  font-size: 20rpx;
}

.collect_img {
  width: 32rpx;
  height: 28rpx;
  margin-left: 10rpx;
}

.card_class {
  position: absolute;
  top: 34rpx;
  left: 46rpx;
  color: #fff;
  font-size: 20rpx;
}

.shop_box {
  position: absolute;
  top: 20rpx;
  left: -4rpx;
}

.shopout_img {
  width: 106rpx;
  height: 36rpx;
}

.shop_text {
  position: absolute;
  top: 6rpx;
  left: 20rpx;
  color: #fff;
  font-size: 20rpx;
  font-weight: 800;
}
